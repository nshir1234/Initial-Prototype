<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<title>Manager â€” Edit Menu</title>
<meta name="viewport" content="width=device-width,initial-scale=1" />
<style>
body { font-family: Arial, sans-serif; padding:14px; background:#fff; }
header { display:flex; justify-content:space-between; align-items:center; margin-bottom:12px; }
.panel { border-radius:8px; padding:12px; box-shadow:0 1px 6px rgba(0,0,0,0.06); background:#fafafa; margin-bottom:12px; }
input[type="text"], input[type="number"] { padding:6px; width:200px; margin-right:6px; }
button { padding:6px 10px; border-radius:6px; cursor:pointer; margin-left:6px; }
.small { font-size:0.9em; color:#666; }
</style>
</head>
<body>
<header>
  <div>
    <h2>Edit Menu</h2>
    <div class="small" id="userInfo"></div>
  </div>
  <div>
    <button id="back">Back</button>
    <button id="logout">Logout</button>
  </div>
</header>

<div id="menuContainer"></div>

<script>
function $(id){ return document.getElementById(id); }
const user = JSON.parse(localStorage.getItem('currentUser') || 'null');
if(!user || user.role !== 'manager'){ alert('Please sign in as Manager'); window.location='index.html'; }
$('userInfo').innerText = `Logged in as: ${user.name} (Role: ${user.role})`;

function getMenu(){ return JSON.parse(localStorage.getItem('MENU')); }
function saveMenu(menu){ localStorage.setItem('MENU', JSON.stringify(menu)); }

function renderMenu(){
  const container = $('menuContainer');
  container.innerHTML = '';
  getMenu().forEach((item, idx)=>{
    const div = document.createElement('div'); div.className='panel';
    div.innerHTML = `
      <input type="text" value="${item.name}" id="name${idx}" />
      <input type="number" value="${item.price}" step="0.01" id="price${idx}" />
      <input type="text" value="${item.modifiers.join(', ')}" id="mod${idx}" />
      <button id="save${idx}">Save</button>
    `;
    container.appendChild(div);

    document.getElementById(`save${idx}`).onclick = ()=>{
      const menu = getMenu();
      menu[idx].name = document.getElementById(`name${idx}`).value;
      menu[idx].price = parseFloat(document.getElementById(`price${idx}`).value) || 0;
      menu[idx].modifiers = document.getElementById(`mod${idx}`).value.split(',').map(s=>s.trim()).filter(Boolean);
      saveMenu(menu);
      alert('Menu item updated!');
    };
  });
}

$('back').addEventListener('click', ()=> window.location='menu.html');
$('logout').addEventListener('click', ()=> { localStorage.removeItem('currentUser'); window.location='index.html'; });

renderMenu();
</script>
</body>
</html>
